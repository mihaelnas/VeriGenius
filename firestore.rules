
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Règle pour la collection des étudiants
    // N'importe qui peut lire (nécessaire pour l'API de validation publique)
    // Seuls les administrateurs connectés peuvent écrire
    match /students/{studentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Règle pour la collection des classes
    // Les admins connectés peuvent tout lire, écrire, mettre à jour, supprimer
    match /classes/{classId} {
       allow read, write: if request.auth != null;
    }
    
    // Règle pour la collection des logs de l'API
    // Seuls les administrateurs connectés peuvent lire les journaux
    // Personne ne peut écrire directement ici via cette méthode
    match /request-logs/{logId} {
        allow read: if request.auth != null;
        allow write: if false; // Block client-side writes
    }
  }
}
